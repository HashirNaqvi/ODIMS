@using DIMS.BAL.Extentions;
@using DIMS.BAL.Classes;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    @{
        var userType = CookieManager.GetCookie(DIMS.BAL.SiteConstants.UserType);
    }

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <ul class="navbar-nav_1 mb-0">
                <li class="nav-item " style="font-size:1.5rem; font-weight:bolder">
                    @if (userType == "1")
                    {
                        @Html.ActionLink("ODIMS", "LstRehabilitationInstitutes", "RehabilitationInstitutes", new { area = "Admin" }, new { @class = "navbar-brand" }) ;
                    }
                    else if (userType == "2")
                    {
                        @Html.ActionLink("ODIMS", "LstDisasterInformation", "DisasterInformation", new { area = "RehabilitationInstitutes" }, new { @class = "navbar-brand" }) ;
                    }
                    else if (userType == "3")
                    {
                        @Html.ActionLink("ODIMS", "LstPublicMessages", "PublicMessages", new { area = "Admin" }, new { @class = "navbar-brand" }) ;
                    }
                    else
                    {
                        <a href="/" class="navbar-brand">ODIMS</a>
                    }
                </li>

            </ul>
            @Html.Partial("~/Areas/Admin/Views/Shared/_HeaderMenu.cshtml")

        </div>
    </nav>

    <div class="container-fluid body-content bg-antiquewhite justify-content-center" id="admin_area">
        @RenderBody()
        <hr />
        <footer class="d-flex justify-content-center bg-dark">
            <p class="text-white" style="margin-top:15px; margin-bottom:15px">&copy; @DateTime.Now.Year - ODIMS</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
</body>
</html>