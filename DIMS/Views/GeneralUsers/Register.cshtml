
@model DIMS.BAL.EF.GeneralUser
@{
    ViewBag.Title = "Register";
}
@if (ViewBag.IsSuccess == null || ViewBag.IsSuccess == false)
{
    if (ViewBag.IsSuccess == false)
    {
        <div>Error while registering!</div>

    }
 
<div class="d-flex align-items-center flex-column">
    <form action="SaveGeneralUser" method="post">
        <h2>General User Registeration</h2>
        <table>
            <tr>
                <td>Email</td>
                <td>@Html.TextBoxFor(model => Model.Email, new { @class = "form-control", @required = "required" })</td>
            </tr>
            <tr>
                <td>UserName</td>
                <td>@Html.TextBoxFor(model => Model.UserName, new { @class = "form-control", @required = "required" })</td>
            </tr>
            <tr>
                <td>Password</td>
                <td>@Html.TextBoxFor(model => Model.Password, new { @type = "password", @class = "form-control", @required = "required" })</td>
            </tr>
            <tr>
                <td>Phone</td>
                <td>@Html.TextBoxFor(model => Model.Phone, new { @class = "form-control", @required = "required" })</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" class="btn btn-primary" value="Save" />
                    @Html.HiddenFor(model => model.GeneralUserID)
                </td>
            </tr>
        </table>
    </form>
</div>
}
else
{
    <div>General User Registered!</div>
}