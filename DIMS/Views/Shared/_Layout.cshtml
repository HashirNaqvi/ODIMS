<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    

   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/" style="font-size: 1.5rem; font-weight: bolder; margin-left: 7rem; ";">ODIMS</a>
        </div>
        <div class="container-fluid justify-content-end" style="padding-right: 7rem;">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item dropdown" style="padding-left: 30px;">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Register</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Default/RehabilitationInstitute">Rehabilitation Institutes </a></li>
                        <li><a class="dropdown-item" href="/GeneralUsers/Register">General User</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown" style="padding-left: 30px;">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Login</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Admin/Account/Login">NDMA Login</a></li>
                        <li><a class="dropdown-item" href="/RehabilitationInstitutes/Account/Login">Rehabilitation Institutes Login </a></li>
                        <li><a class="dropdown-item" href="/GeneralUser/Account/Login">General User</a></li>
                    </ul>
                </li>
                
            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content bg-antiquewhite">
        @RenderBody()
        <hr />
        <footer class="d-flex justify-content-center bg-dark">
            <p class="text-white" style="margin-top:15px; margin-bottom:15px">&copy; @DateTime.Now.Year - ODIMS</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>